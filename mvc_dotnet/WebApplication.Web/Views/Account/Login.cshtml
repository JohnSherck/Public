@using WebApplication.Web.Models.Account;
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="global-container">
    <div class="card login-form">
        <div class="card-body">
            <h3 class="card-title text-center">Login</h3>
            <div class="card-text">
                <form asp-controller="account" asp-action="login" method="post">

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input type="email" asp-for="Email" class="form-control form-control-sm" />
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input type="password" asp-for="Password" class="form-control form-control-sm" />
                        <span asp-validation-for="Password"></span>
                    </div>

                    <input type="submit" value="Login" class="btn account-btn btn-primary btn-block" />
                    <div class="sign-up">
                        Don't have an account? <a href="/Account/Register">Create One</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
