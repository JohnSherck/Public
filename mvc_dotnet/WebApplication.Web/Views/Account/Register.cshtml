@using WebApplication.Web.Models.Account;
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="global-container">
    <div class="card login-form">
        <div class="card-body">
            <h3 class="card-title text-center">Create an Account</h3>
            <div class="card-text">
                <form asp-controller="account" asp-action="register" method="post">
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input type="email" asp-for="Email" class="form-control form-control-sm"/>
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input type="password" asp-for="Password" class="form-control form-control-sm"/>
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"></label>
                        <input type="password" asp-for="ConfirmPassword" class="form-control form-control-sm"/>
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>

                    <input type="submit" value="Register" class="btn account-btn btn-primary btn-block" />

                </form>
            </div>
        </div>
    </div>
 </div>